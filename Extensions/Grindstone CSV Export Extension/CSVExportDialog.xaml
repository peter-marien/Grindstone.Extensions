<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Export Timeslices to CSV" Height="200" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="White" FontFamily="Segoe UI">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Start Date:" VerticalAlignment="Center" Margin="0,0,10,10"/>
        <DatePicker Grid.Row="0" Grid.Column="1" x:Name="startDatePicker" VerticalAlignment="Center" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="End Date:" VerticalAlignment="Center" Margin="0,0,10,10"/>
        <DatePicker Grid.Row="1" Grid.Column="1" x:Name="endDatePicker" VerticalAlignment="Center" Margin="0,0,0,10"/>

        <CheckBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" x:Name="includeOriginalNameCheckbox" 
                  Content="Include Original WorkItem Column" 
                  IsChecked="True" 
                  VerticalAlignment="Center" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="exportButton" Content="Export" Width="80" Height="25" Margin="0,0,10,0" IsDefault="True"/>
            <Button x:Name="cancelButton" Content="Cancel" Width="80" Height="25" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
