<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="400" Width="600"
        Title="Error"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Error Icon and Title -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Image Source="pack://application:,,,/PresentationFramework.Aero;component/themes/Aero/Images/Error48.png"
                   Width="32" Height="32" Margin="0,0,10,0" VerticalAlignment="Top" />
            <TextBlock x:Name="errorTitle" FontSize="16" FontWeight="Bold"
                       TextWrapping="Wrap" VerticalAlignment="Center" />
        </StackPanel>

        <!-- Error Message -->
        <TextBlock Grid.Row="1" x:Name="errorMessage" TextWrapping="Wrap"
                   Margin="0,0,0,10" />

        <!-- Exception Details (Scrollable & Selectable) -->
        <Border Grid.Row="2" BorderBrush="Gray" BorderThickness="1" Margin="0,0,0,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBox x:Name="errorDetails"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         Background="WhiteSmoke"
                         BorderThickness="0"
                         Padding="5"
                         FontFamily="Consolas"
                         FontSize="11" />
            </ScrollViewer>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="copyButton" Width="100" Margin="0,0,10,0" Padding="5">Copy Error</Button>
            <Button x:Name="closeButton" Width="100" Padding="5">Close</Button>
        </StackPanel>
    </Grid>
</Window>
