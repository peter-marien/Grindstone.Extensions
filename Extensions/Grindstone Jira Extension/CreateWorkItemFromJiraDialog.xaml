<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="300" Width="500"
        Title="Create Work Item from Jira"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White"
        FontFamily="Segoe UI">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center">Jira Connection:</TextBlock>
        <ComboBox Grid.Row="0" Grid.Column="1" Margin="0,0,0,10" x:Name="connectionComboBox"
                  DisplayMemberPath="Name"
                  ToolTip="Select a configured Jira connection" />

        <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center">Issue Key:</TextBlock>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="0,0,0,10" x:Name="issueKey"
                 Text="{Binding IssueKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 ToolTip="e.g., PROJ-123" />

        <TextBlock Grid.Row="2" Grid.ColumnSpan="2" Margin="0,0,0,10"
                   TextWrapping="Wrap" FontSize="10" Foreground="Gray">
            Use "Jira Integration > Manage Connections" to add or edit Jira server connections.
        </TextBlock>

        <TextBlock Grid.Row="3" Grid.ColumnSpan="2" x:Name="statusMessage"
                   TextWrapping="Wrap" VerticalAlignment="Top" Margin="0,10,0,10" />

        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="createButton" Width="100" Margin="0,0,10,0" Padding="5">Create</Button>
            <Button x:Name="cancelButton" Width="100" Padding="5">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
