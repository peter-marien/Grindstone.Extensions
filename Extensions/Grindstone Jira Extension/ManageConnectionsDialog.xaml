<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        Height="500" Width="700"
        Title="Manage Jira Connections"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- Left side: Connection List -->
        <Grid Grid.Row="0" Grid.Column="0" Margin="0,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" FontSize="14" FontWeight="Bold" Margin="0,0,0,10">Jira Connections</TextBlock>

            <ListBox Grid.Row="1" x:Name="connectionsList"
                     DisplayMemberPath="Name" />
        </Grid>

        <!-- Right side: Connection Details -->
        <Grid Grid.Row="0" Grid.Column="1" Width="350">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.ColumnSpan="2" FontSize="14" FontWeight="Bold" Margin="0,0,0,10">
                Connection Details
            </TextBlock>

            <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center">Name:</TextBlock>
            <TextBox Grid.Row="1" Grid.Column="1" Margin="0,0,0,10" x:Name="connectionName"
                     ToolTip="Friendly name for this connection" />

            <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center">Server URL:</TextBlock>
            <TextBox Grid.Row="2" Grid.Column="1" Margin="0,0,0,10" x:Name="serverUrl"
                     ToolTip="e.g., https://yourcompany.atlassian.net" />

            <TextBlock Grid.Row="3" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center">Email:</TextBlock>
            <TextBox Grid.Row="3" Grid.Column="1" Margin="0,0,0,10" x:Name="email"
                     ToolTip="Your Jira account email" />

            <TextBlock Grid.Row="4" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center">API Token:</TextBlock>
            <PasswordBox Grid.Row="4" Grid.Column="1" Margin="0,0,0,10" x:Name="apiToken"
                         ToolTip="Generate from Jira Account Settings > Security > API Tokens" />

            <TextBlock Grid.Row="5" Grid.ColumnSpan="2" Margin="0,10,0,10"
                       TextWrapping="Wrap" FontSize="10" Foreground="Gray">
                Note: Generate an API token from your Jira account settings (Account Settings > Security > API Tokens)
            </TextBlock>

            <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,10,0,0">
                <Button x:Name="addButton" Width="80" Margin="0,0,5,0" Padding="5">Add</Button>
                <Button x:Name="updateButton" Width="80" Margin="0,0,5,0" Padding="5">Update</Button>
                <Button x:Name="deleteButton" Width="80" Margin="0,0,5,0" Padding="5">Delete</Button>
                <Button x:Name="testButton" Width="80" Padding="5">Test</Button>
            </StackPanel>
        </Grid>

        <!-- Bottom: Close Button -->
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="closeButton" Width="100" Padding="5">Close</Button>
        </StackPanel>
    </Grid>
</Window>
